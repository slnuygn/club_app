rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow anyone to view images (needed for displaying posts)
    // Allow authenticated users to upload images to the 'posts' folder
    match /posts/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to upload club photos
    match /club_photos/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Keep other paths secure by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}